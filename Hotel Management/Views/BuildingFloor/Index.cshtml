﻿@model System.Collections.Generic.IEnumerable<Hotel_Management.Models.BuildingFloorViewModel>
@{
    ViewBag.Title = "Danh sách Tòa nhà và Tầng";
}

<h2>Danh sách Tòa nhà và Tầng</h2>

@using (Html.BeginForm("Index", "BuildingFloor", FormMethod.Get))
{
    <div class="form-inline mb-3">
        <div class="form-group mr-2">
            <label for="searchString" class="mr-1">Tìm kiếm (ID, Tên, Địa chỉ):</label>
            <input type="text" name="searchString" value="@Request.QueryString["searchString"]" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary mr-2">Tìm kiếm</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Bỏ lọc</a>
    </div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Building ID</th>
            <th>Tên Tòa nhà</th>
            <th>Địa chỉ</th>
            <th>Danh sách Tầng</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var building in Model)
        {
            <tr>
                <td>@building.BuildingID</td>
                <td>@building.BuildingName</td>
                <td>@building.Address</td>
                <td>
                    @if (building.Floors != null && building.Floors.Any())
                    {
                        <ul style="padding-left: 20px;">
                            @foreach (var floor in building.Floors.OrderBy(f => f.FloorNumber))
                            {
                                <li>
                                    <strong>Số tầng:</strong>
                                    @if (floor.FloorNumber < 0)
                                    {
                                        <span class="text-danger">Dữ liệu không hợp lệ (floor < 0)</span>
                                    }
                                    else
                                    {
                                        @floor.FloorNumber
                                    }
                                    -
                                    <strong>Số phòng mỗi tầng:</strong> @floor.TotalRoomsOfFloor
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>Không có tầng nào</span>
                    }
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = building.BuildingID }, new { @class = "btn btn-primary btn-sm" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = building.BuildingID }, new { onclick = "return confirm('Bạn có chắc muốn xóa không?')", @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    @Html.ActionLink("Thêm Tòa nhà mới", "Create", null, new { @class = "btn btn-success" })
</p>