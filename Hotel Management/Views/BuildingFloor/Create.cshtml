@model Hotel_Management.Models.BuildingFloorViewModel

@{
    ViewBag.Title = "Create Building";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4 text-primary">Create Building</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card shadow-sm p-4 mb-5 bg-white rounded">
        <h4 class="mb-3 text-secondary">Building Information</h4>

        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

        <div class="form-group row">
            @Html.LabelFor(m => m.BuildingName, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.BuildingName, new { @class = "form-control form-control-lg", placeholder = "Enter building name" })
                @Html.ValidationMessageFor(m => m.BuildingName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(m => m.Address, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control form-control-lg", placeholder = "Enter address" })
                @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
            </div>
        </div>

        <hr />

        <h4 class="mb-3 text-secondary">Floors</h4>

        <table class="table table-striped table-hover">
            <thead class="thead-light">
                <tr>
                    <th style="width: 40%;">Floor Number</th>
                    <th style="width: 40%;">Total Rooms</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Floors.Count; i++)
                {
                    <tr>
                        <td>
                            @Html.TextBoxFor(m => m.Floors[i].FloorNumber, new { @class = "form-control", placeholder = "Floor number" })
                            @Html.ValidationMessageFor(m => m.Floors[i].FloorNumber, "", new { @class = "text-danger small" })
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m.Floors[i].TotalRoomsOfFloor, new { @class = "form-control", placeholder = "Total rooms" })
                            @Html.ValidationMessageFor(m => m.Floors[i].TotalRoomsOfFloor, "", new { @class = "text-danger small" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-right mt-4">
            <input type="submit" value="Create" class="btn btn-primary btn-lg px-5" />
        </div>
    </div>
}
